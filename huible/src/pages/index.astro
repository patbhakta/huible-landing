---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Hero from "@/components/landing/Hero.astro";
import OurAI from "@/components/landing/OurAI.astro";
import Features from "@/components/landing/Features.astro";
import Testimonials from "@/components/landing/Testimonials.astro";
import Pricing from "@/components/landing/Pricing.astro";
import { AstroSeo } from "@astrolib/seo";
---

<!---
Use AstroSeo in all the pages you want different Seo than the index page
-->
<AstroSeo
  title="HU·IBLE | Home"
  description="the Human AI"
  canonical="https://huible.com"
  openGraph={{
    url: "https://huible.com",
    title: "HU·IBLE",
    description: "the Human AI",
    images: [
      {
        url: "https://www.huible.com/opengraph/social-og.jpg",
        width: 1200,
        height: 630,
        alt: "Social open graph",
        type: "image/jpeg",
      },
      {
        url: "https://www.huible.com/opengraph/twitter-og.jpg",
        width: 4096,
        height: 4096,
        alt: "Twitter open graph",
        type: "image/jpeg",
      },
      { url: "https://www.huible.com/opengraph/social-og.jpg" },
      { url: "https://www.huible.com/opengraph/twitter-og.jpg" },
    ],
    site_name: "HU·IBLE",
  }}
  twitter={{
    handle: "@patbhakta",
    site: "@site",
    cardType: "summary_large_image",
  }}
/>
<BaseLayout>
  <Hero />
  <OurAI />
  <Features />
  <Testimonials />
  <Pricing />
</BaseLayout>
